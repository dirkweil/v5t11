<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

  <Appenders>
    <Console name="STDOUT">
      <PatternLayout pattern="%d{ABSOLUTE} %-5p [%c] (%t) %m%n" />
    </Console>
  </Appenders>

  <Loggers>
